{
  "private": true,
  "name": "api-template",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "cross-env NODE_ENV=production node dist/main/server.js",
    "test": "jest --passWithNoTests",
    "test:cov": "yarn test --coverage",
    "dev": "tsnd -r tsconfig-paths/register --inspect --exit-child --transpile-only --ignore-watch node_modules --respawn src/main/server.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "cross-env DATABASE_PORT=5432 && yarn dev",
    "prisma:dev": "cross-env DATABASE_HOST=localhost prisma",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js)\" --write"
  },
  "engines": {
    "node": "14.19.3"
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@babel/cli": "7.18.6",
    "@babel/core": "7.18.6",
    "@babel/node": "7.18.6",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@swc/core": "1.2.208",
    "@swc/jest": "0.2.21",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "18.0.0",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "@typescript-eslint/parser": "5.30.0",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "eslint": "8.18.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "git-commit-msg-linter": "4.1.3",
    "jest": "28.1.2",
    "prettier": "2.7.1",
    "prisma": "4.0.0",
    "ts-jest": "28.0.5",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@prisma/client": "4.0.0",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "helmet": "5.1.0",
    "rimraf": "3.0.2",
    "swagger-ui-express": "4.4.0"
  }
}
